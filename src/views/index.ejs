  <table class="table table-bordered table-striped text-center mt-4" id="users">
    <thead>
      <tr class="bg-primary text-white">
        <th scope="col">ID</th>
        <th scope="col">USUARIO</th>
        <th scope="col">ROL</th>            
        <th scope="col">ACCIONES</th>            
      </tr>
    </thead>
    <tbody>
      <% results.forEach((user)=>{ %>
        <tr>  
            <td><%= user.id %></td>  
            <td><%= user.name %></td>
            <td><%= user.rol %></td>
            <td>
              <a href="/edit/<%= user.id %>" class="btn btn-outline-info"><i class='bx bxs-edit'></i></a>
              <a onclick="confirmar(<%= user.id %>)" class="btn btn-outline-danger"><i class='bx bxs-trash-alt'></i></a>                   
            </td>
        </tr>                                   
     <% }) %>
    </tbody>
  </table>
