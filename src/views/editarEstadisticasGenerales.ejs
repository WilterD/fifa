<!DOCTYPE html>
<html lang="es">
<head>
  <%- include('partials/head.ejs') %>
  <link rel="stylesheet" href="/css/main.css">
    <title>Editar Confederación</title>
</head>
<body>
    <%- include('partials/navigation.ejs') %>
    <section class="home-section">
      <div class="home-content">
        <i class='bx bx-menu' ></i>
      </div>

      
      
      <% if (generales) { %>
      <div class="container mt-4">          
          <div class="card border-secondary">  
                <div class="card-header">Editar Estadísticas Generales</div>
                <div class="card-body">
                    <form action="/updateEstadisticasGenerales" method="POST">
                        <div class="mb-3">
                            <input type="text" class="form-control" hidden id="codEquipo" name="codEquipo" tabindex="1" value="<%= generales.codEquipo  %>"> 
                            <input type="text" class="form-control" hidden id="codPartido" name="codPartido" tabindex="1" value="<%= generales.codPartido  %>">  
                          <label for="posesion" class="form-label">Posesión de balón</label>
                          <input type="number" class="form-control" id="posesionBalon" name="posesionBalon" tabindex="1" value="<%= generales.posesionBalon  %>" max="100" min="0" step="1" maxlength="3">                        
                        </div> 
                        
                        <label for="posesion" class="form-label">Tiros al arco</label>
                          <input type="number" class="form-control" id="tirosArco" name="tirosArco" tabindex="1" value="<%= generales.tirosArco  %>" min="0" step="1">                        
                        </div> 
          </div>
          
                      
                        <button id="submit-btn" type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                        <a href="/confederaciones" class="btn btn-secondary">Cancelar</a>
                    </form>      
                </div>
            </div>     
      </div>

      <% } %>
    </section>
    <section class="home-section">
      <div class="container">
          <div class="row">
              <div class="col-xs-12 mx-auto">
                  <div id="mensajes">
                      <p id="mensaje"></p>
                      <img class="rounded" src="/images/medioAmbiente.png" width="330" height="230">
                  </div>
              </div>
          </div>
      </div>
  </section>
      <%- include('partials/scripts.ejs') %>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>