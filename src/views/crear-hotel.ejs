<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('partials/head.ejs') %>
    <title>CRUD</title>
</head>
<body>
    <%- include('partials/navigation.ejs') %>
      <div class="container mt-4">     
            <div class="card border-secondary">  
                <div class="card-header">Nuevo Hotel</div>
                <div class="card-body">
                    <form action="/saveHotel" method="POST">
                        <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre del hotel</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" tabindex="1">
                        </div>   
                          
                        <div class="mb-3">
                            <label for="ciudad" class="form-label">Dirección</label>
                            <textarea type="text" class="form-control" id="direccion" name="direccion" tabindex="1"></textarea>
                            </div>   
                        <div class="mb-3">
                        <label for="telefono" class="form-label">Teléfonos</label>
                        <input type="text" class="form-control" id="telefono" name="telefono" tabindex="1">
                        </div> 
                        <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                        <a href="/hotel" class="btn btn-secondary">Cancelar</a>
                    </form>
                </div>
            </div>        
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
</body>
</html>