<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('partials/head.ejs') %>
    <title>CRUD</title>
</head>
<body>
    <%- include('partials/navigation.ejs') %>
    <% if (hospedaje) { %>
        <% if (hotel) { %>
        <% if (equipo) { %>
      <div class="container mt-4">     
            <div class="card border-secondary">  
                <div class="card-header">Nuevo Hospedaje</div>
                <div class="card-body">
                    <form action="/updateHospedaje" method="POST">

                        <!--aqui se muestra el nombre del hotel a editar-->
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Hotel a hospedar el equipo</label>
                            <input id="nombre" name="nombre" class="form-control" tabindex="1" required value="<%= hotel.nombre %>" />
                        </div>
                        
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Equipo a hospedar en el hotel</label>
                            <input id="nombre" name="nombre" class="form-control" tabindex="1" required value="<%= equipo.nombre %>" />
                        </div>
                        <div class="mb-3">
                            <label for="fecha_inicio" class="form-label">Fecha Inicio</label>
                            <input type="date" class="form-control" id="fecha_inicio" name="fecha_inicio" tabindex="1" value="<%= hospedaje.fecha_inicio %>">
                        </div> 
                        <div class="mb-3">
                            <label for="fecha_fin" class="form-label">Fecha Cierre</label>
                            <input type="date" class="form-control" id="fecha_fin" name="fecha_fin" tabindex="1" value="<%= hospedaje.fecha_fin %>">
                        </div> 
                        <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                        <a href="/hotel" class="btn btn-secondary">Cancelar</a>
                    </form>
                </div>
            </div>        
      </div>
      <% } %>
      <% } %>
      <% } %>
      <%- include('partials/scripts.ejs') %>
</body>
</html>